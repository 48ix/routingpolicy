! {{ p.name }} (AS{{ p.asn }}) IPv4 Prefix Lists
{% for addr in p.ipv4 %}
ip prefix-list ipv4-{{ p.asn }}-nexthop permit {{ addr }}/32
{% endfor %}
{% for prefix in prefixes %}
{% if prefix.prefixlen < max_len %}
ip prefix-list ipv4-{{ p.asn }} permit {{ prefix }} le {{ max_len }}
{% else %}
ip prefix-list ipv4-{{ p.asn }} permit {{ prefix }}
{% endif %}
{% endfor %}
!